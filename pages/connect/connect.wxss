page {
  background-color: #f8f8f8;
}
.container {
  padding: 30rpx;
  align-items: left;
}
.input {
  margin-top:3px;
  width: 100%;
  border: 1px solid lightgray;
  border-radius: 6px;
}
.button {
  position: fixed;
  width: 690rpx;
  bottom: 30rpx;
}
.to-details{
  position: absolute;
  background-color: #4CAF50;
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
  top: 350px;
  left: 100px;
}